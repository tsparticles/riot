<my-component>
    <p>{ props.message }</p>

    <riot-particles id="tsparticles" options='{particlesConfig}' particlesInit='{particlesInit}'
                    particlesLoaded='{particlesLoaded}'/>

    <script>
        import RiotParticles from "riot-particles";
        import { loadFull } from "tsparticles";
        import { basic } from "tsparticles-demo-configs";

        export default {
            components: {
                RiotParticles
            },
            particlesConfig: basic,
            particlesInit: async (main) => {
                await loadFull(main);
            },
            particlesLoaded: (container) => console.log(container)
        }
    </script>
</my-component>
